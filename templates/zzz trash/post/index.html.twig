{% extends 'default/index.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="card mb-4">
        {#<img class="card-img-top" src="">#}
        <div class="card-body">
            <h2 class="card-title">{{ article.title }}</h2>
            <p class="card-text">{{ article.text }}</p>
        </div>
        <div class="card-footer text-muted">
            <div class="row">
                <div class="col-md-9 justify-content-center align-self-center">
                    Posted on {{ article.createdAt|date('F d, Y') }} by {{ article.author.username }}
                </div>
                <div class="col-md-3 text-right">
                    <a class="btn btn-light text-primary" href="{{ path('post') }}?id={{ article.id }}#comments"
                       role="button">
                        {% if article.comments|length > 0 %}
                            {{ article.comments|length }}
                        {% endif %}
                        <i class="fa fa-comment"></i>
                    </a>
                    <a class="btn btn-light text-primary" href="{{ path('like') }}?post_id={{ article.id }}"
                       role="button">
                        {% if article.articleLikes|length > 0 %}
                            {{ article.articleLikes|length }}
                        {% endif %}
                        <i class="fa fa-heart"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% if not tags is empty %}
        <div class="card mb-4">
            <div class="card-body text-muted">
                <p class="card-text">
                    Tags:
                    {% for tag in tags %}
                        <a href="{{ path('tag') }}?name={{ tag.name }}">{{ tag.name }}</a>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
            </div>
        </div>
    {% endif %}

    <div class="card mb-4" id="comments">
        <div class="card-body">
            <h3>Comments</h3>
            {% if comments is empty %}
                <div class="alert alert-success w-100 text-center">
                    Comments not found
                </div>
            {% else %}
                <div class="comments-list px-3">
                    {% for comment in comments %}
                        <div class="media mb-3">
                            <div class="media-body">
                                <h4 class="media-heading user_name">{{ comment.author.username }}</h4>
                                {{ comment.text }}
                            </div>
                            <p class="text-right text-muted">
                                <small>{{ comment.createdAt|date('H:i F d, Y') }}</small>
                            </p>
                        </div>
                    {% endfor %}
                    <div class="col-md-12 comments-pagination">
                        <div class="comments-pagination-body">
                            {{ knp_pagination_render(comments) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <h3>Add comment</h3>
            {{ form_start(form) }}
            {{ form_errors(form.text) }}
            {{ form_widget(form.text) }}
            <button class="btn btn-primary" type="submit">Submit</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
