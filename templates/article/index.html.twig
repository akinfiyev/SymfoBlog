{% extends 'default/index.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Article text</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <th scope="row">{{ article.id }}</th>
                <td>{{ article.title }}</td>
                <td>{{ article.text }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
