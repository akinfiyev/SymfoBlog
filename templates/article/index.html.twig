{% extends 'default/index.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    {% for article in articles %}
        <div class="card mb-4">
            {#<img class="card-img-top" src="">#}
            <div class="card-body">
                <h2 class="card-title">{{ article.title }}</h2>
                <p class="card-text">{{ article.text }}</p>
                <a href="{{ path('post') }}?id={{ article.id }}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                <div class="row">
                    <div class="col-md-10 justify-content-center align-self-center">
                        Posted on {{ article.createdAt|date('F d, Y') }} by {{ article.author.username }}
                    </div>
                    <div class="col-md-2 text-right">
                        <a class="btn btn-light btn-custom-primary" href="{{ path('like') }}?post_id={{ article.id }}"
                           role="button">
                            {% if article.articleLikes|length > 0 %}
                                {{ article.articleLikes|length }}
                            {% endif %}
                            <i class="fa fa-heart"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

    <div class="col-md-3 mx-auto">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
