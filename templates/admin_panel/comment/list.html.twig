{% extends 'base/admin_panel/base.html.twig' %}

{% block title %}Admin panel - Comments list{% endblock %}

{% block body %}
    <div class="container-fluid">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Author</th>
                <th scope="col">Text</th>
                <th scope="col">Created</th>
                <th scope="col">Article</th>
                <th scope="col">Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <th class="align-middle" scope="row">{{ comment.id }}</th>
                    <td class="align-middle">{{ comment.author.username }}</td>
                    <td class="align-middle">{{ comment.text }}</td>
                    <td class="align-middle">{{ comment.createdAt|date('H:i d F Y') }}</td>
                    <td class="align-middle">
                        <a class="btn"
                           href="{{ path('articles_show', {'id': comment.article.id}) }}#comments"
                           role="button">
                            <i class="fa fa-link"></i>
                        </a>
                    </td>
                    <td class="align-middle">
                        <a class="btn"
                           href="{{ path('admin_panel_comments_delete', {'id': comment.id}) }}"
                           role="button">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="col-md-3 mx-auto">
            {{ knp_pagination_render(comments) }}
        </div>
    </div>
{% endblock %}





